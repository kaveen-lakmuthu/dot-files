#Terminal
super + Return
	alacritty
#Program launcher
super + r
	dmenu_run
super + alt + t
	tuxi "$(echo "" | dmenu -p 'Ask Tuxi:')" | espeak -s 140
#Firefox
super + d
	firefox
#Screen record
#super + c
#    /home/gabriel/stuff/scr.sh
#super + shift + c
#    killall ffmpeg
# Pcmanfm
super + p
	pcmanfm
